{
    "name": "RawNet2",
    "n_gpu": 1,
    "arch": {
      "type": "RawNet2",
      "args": {
        "sinc_type": "s1",
        "norm_before_gru": true,
        "gru_hidden": 1024,
        "gru_num_layers": 3,
        "sinc_out_channels": 20,
        "sinc_filter_length": 1024,
        "sinc_abs": true,
        "sinc_requires_grad": false,
        "min_low_hz": 50,
        "min_band_hz": 50,
        "small_resblock_kernel_size": 20,
        "large_resblock_kernel_size": 128
      }
    },
    "lr_scheduler": {
      "type": "CosineAnnealingLR",
      "args": {
        "T_max": 23220
      }
    },
    "trainer": {
      "epochs": 180,
      "len_epoch": 258,
      "log_step": 50,
      "grad_norm_clip": 10,
      "monitor": "min val_loss",
      "early_stop": 500,
      "save_dir": "saved/",
      "save_period": 5,
      "log_parameters": false,
      "verbosity": 2,
      "visualize": "wandb",
      "wandb_entity": "yaraksen",
      "wandb_project": "asr2"
    },
    "data": {
      "train": {
        "batch_size": 64,
        "num_workers": 4,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "train-other-500",
              "max_audio_length": 20.0,
              "max_text_length": 400,
              "data_dir": "data/datasets/librispeech"
            },
            "module": "hw_asr.datasets"
          }
        ]
      },
      "dev": {
        "batch_size": 64,
        "num_workers": 4,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "dev-clean",
              "data_dir": "data/datasets/librispeech"
            }
          }
        ]
      },
      "eval": {
        "batch_size": 64,
        "num_workers": 4,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "test-clean",
              "data_dir": "data/datasets/librispeech"
            }
          }
        ]
      }
    },
    "optimizer": {
      "type": "AdamW",
      "args": {
        "lr": 1e-4,
        "weight_decay": 0.0005
      }
    },
    "loss": {
      "type": "CTCLoss",
      "args": {}
    },
    "metrics": [
      {
        "type": "ArgmaxWERMetric",
        "args": {
          "name": "WER (argmax)"
        }
      },
      {
        "type": "ArgmaxCERMetric",
        "args": {
          "name": "CER (argmax)"
        }
      }
    ]
  }
  